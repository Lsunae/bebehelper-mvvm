<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"> <!-- Widget.Design.TextInputLayout -->
        <item name="colorControlNormal">@color/gray_300</item>  <!-- unFocus 상태일때 밑줄 색. -->
        <item name="boxStrokeColor">@color/pink</item> <!--  Focus 상태일때 밑줄 색. -->
        <item name="android:textCursorDrawable">@color/pink</item>  <!--  cursor 색. -->
        <item name="android:textColorHint">@color/gray_600</item>  <!--  hint 색 -->
        <item name="hintTextColor">@color/pink</item>   <!-- floating hint 색 -->
    </style>

    <style name="InputMenuTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorControlNormal">@color/gray_300</item>  <!-- unFocus 상태일때 밑줄 색. -->
        <item name="boxStrokeColor">@color/pink</item> <!--  Focus 상태일때 밑줄 색. -->
        <item name="android:textCursorDrawable">@color/pink</item>  <!--  cursor 색. -->
        <item name="android:textColorHint">@color/gray_600</item>  <!--  hint 색 -->
        <item name="hintTextColor">@color/pink</item>   <!-- floating hint 색 -->
    </style>
</resources>